# Lock screen after 5 minutes; turn off display after another 5 minutes.
swayidle -w timeout 300 "swaylock -f -i /home/keenen/Pictures/Papes/cats.jpg --font Iosevka" timeout 600 "wlopm --off \*" timeout 1000 "systemctl suspend" resume "wlopm --on \*" before-sleep "swaylock -f -i /home/keenen/Pictures/Papes/cats.jpg --font Iosevka" >/dev/null 2>&1 &
